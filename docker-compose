services:
  redis:
    image: redis

  db:
    image: postgres
    ports:
      - "2345:5432"
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres

  vote:
    image: arunawsdevops/vote:latest
    ports:
      - "1000:80"
    depends_on:
      - redis

  result:
    image: arunawsdevops/result:latest
    ports:
      - "1001:80"
    depends_on:
      - db

  worker:
    image: arunawsdevops/worker:latest
    depends_on:
      - redis
      - db
